<ul class="pl-font">
  <li class="pl-font-serif">
    [serif]: {{ headline.short }}
    {{# meta }}
      {{# font-serif}}
        {{>atoms-scss-style}}
      {{/ font-serif}}
    {{/meta}}
    <hr />
  </li>
  <li class="pl-font-serif-italic">
    [serif italic]: {{ headline.short }}
    {{# meta }}
      {{# font-serif-italic}}
        {{>atoms-scss-style}}
      {{/ font-serif-italic}}
    {{/meta}}
    <hr />
  </li>
  <li class="pl-font-serif-bold">
    [serif bold]: {{ headline.short }}
    {{# meta }}
      {{# font-serif-bold}}
        {{>atoms-scss-style}}
      {{/ font-serif-bold}}
    {{/meta}}
    <hr />
  </li>
  <li class="pl-font-serif-bold-italic">
    [serif bold italic]: {{ headline.short }}
    {{# meta }}
      {{# font-serif-bold-italic}}
        {{>atoms-scss-style}}
      {{/ font-serif-bold-italic}}
    {{/meta}}
  </li>
  <li class="pl-font-helvetica">
    [helvetica pt]: {{ headline.short }}
    {{# meta }}
       {{# font-helvetica}}
        {{>atoms-scss-style}}
      {{/ font-helvetica}}
    {{/meta}}
    <hr />
  </li>
  <li class="pl-font-helvetica-italic">
    [helvetica italic]: {{ headline.short }}
    {{# meta }}
       {{# font-helvetica-italic}}
        {{>atoms-scss-style}}
      {{/ font-helvetica-italic}}
    {{/meta}}
    <hr />
  </li>
  <li class="pl-font-helvetica-bold">
    [helvetica bold]: {{ headline.short }}
    {{# meta }}
       {{# font-helvetica-bold}}
        {{>atoms-scss-style}}
      {{/ font-helvetica-bold}}
    {{/meta}}
    <hr />
  </li>
  <li class="pl-font-helvetica-bold-italic">
    [helvetica bold italic]: {{ headline.short }}
    {{# meta }}
       {{# font-helvetica-bold-italic}}
        {{>atoms-scss-style}}
      {{/ font-helvetica-bold-italic}}
    {{/meta}}
  </li>
</ul>
